<div class="row">
  <div class="col-md-8">
    <div class="vote-header"><%= render partial: 'votes/voter', locals: { post: @post } %></div>
    <h1><%= @post.title %></h1>

    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %>
    </small>

    <% if @post.image? %>
      <br/><br/><%= image_tag(@post.image.url) %><br/>
    <% end %>

    <p><%= markdown @post.body %></p>
  </div>

  <div class="col-md-4">
    <% if policy(@post).update? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-info' %>
    <% end %>

    <% if policy(@post).destroy? %>
    <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
    <% end %>

    <div>
      <h3><%= pluralize(@post.points, 'point') %></h3>
      <small>
        <%= pluralize(@post.up_votes, 'up vote') %>,
        <%= pluralize(@post.down_votes, 'down vote') %>
      </small>
    </div>

    <%= render partial: 'favorites/favorite', locals: { post: @post } %>
  </div>

</div>

<div class="row">
  <div class="col-md-5">
    <h2>Comments</h2>
    <% if policy(@comments).create? %>
      <p><%= render partial: 'comments/form', locals: { post: @post, comment: @comment } %></p>
    <% end %>
    <%= render partial: 'comments/comment', collection: @comments %>
  </div>
</div>

